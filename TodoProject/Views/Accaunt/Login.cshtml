@model UserModel

<form method="post">
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-primary">User Login</h2>
			<hr />
		</div>
		<div class="mb-3">
			<label> User Name </label>
			<input asp-for="UserName" type="text" class="form-control">
			<label> Password </label>
			<input asp-for="PassWord" type="text" class="form-control">
		</div>
		<button type="submit" class="btn btn-primary" style="width:150px">Login</button>
		<a asp-controller="Accaunt" asp-action="Index" class="btn btn-secondary" style="width:150px"> Back to Accaunt </a>
	</div>
</form>