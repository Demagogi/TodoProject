@model ToDoListItems

<form method="post">
	@Html.HiddenFor(x => x.ToDoListId)
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-primary">Edit Item</h2>
			<hr />
		</div>
		<div class="mb-3">
			<label> Title </label>
			<input asp-for="Title" type="text" class="form-control">
			<label> Description </label>
			<input asp-for="Description" type="text" class="form-control">
		</div>
		<button type="submit" class="btn btn-primary" style="width:150px">Edit</button>
		<a asp-controller="ToDoList" asp-action="Index" class="btn btn-secondary" style="width:150px"> Back to List </a>
	</div>
</form>
