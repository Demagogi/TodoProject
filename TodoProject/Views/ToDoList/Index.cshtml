@model List<ToDoList> 

<div class="container">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary"> ToDo List </h2>
        </div>
        <div class="col-6 text-end">
        </div>
    </div>
    <table class="table table-boarded table-striped">
        <thead>
            <tr>
                <th>ID</th>
                <th> Name</th>
            </tr>
        </thead>
        <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td>@obj.Id</td>
                        <td> @obj.Name </td>
                        <td><a asp-controller="ToDoList" asp-action="Details" asp-route-Id="@obj.Id" class="btn btn-secondary text-end bg-info"> Details </a></td>
                    </tr>
                }
        </tbody>
    </table>
</div>