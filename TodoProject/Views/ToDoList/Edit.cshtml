@model ToDoListViewModel

<form method="post">
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-primary">Edit ToDo</h2>
			<hr />
		</div>
		<div class="mb-3">
			<label> Name </label>
			<input asp-for="Name" type="text" class="form-control">
			<label> Description </label>
			<input asp-for="Description" type="text" class="form-control">
			<a asp-controller="ToDoList" asp-action="CreateItem" asp-route-id="@Model.Id" class="btn btn-primary"> Add new Item </a>
		</div>
		<button type="submit" class="btn btn-primary" style="width:150px">Edit</button>
		<a asp-controller="ToDoList" asp-action="Index" class="btn btn-secondary" style="width:150px"> Back to List </a>
	</div>
</form>